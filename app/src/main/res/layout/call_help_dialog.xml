<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ln_dialog"
            android:layout_gravity="center"
            android:background="@drawable/atp__dialog_background">

            <RelativeLayout
                android:id="@+id/layout_call_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="60dp">

                <ImageView
                    android:id="@+id/img_putin"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/putin" />

                <ImageView
                    android:id="@+id/img_kim_jong_un"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/kim_jong_un"
                    android:layout_alignParentEnd="true"/>

                <ImageView
                    android:id="@+id/img_obama"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/obama"
                    android:layout_below="@id/img_putin"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/img_trump"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/trump"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/img_kim_jong_un"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_close_dialog"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="@string/close"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:background="@drawable/atp__btn_template"
            android:textColor="@color/white"/>

    </FrameLayout>

</layout>